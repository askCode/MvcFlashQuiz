<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title Flash Quiz!</title>
        @* Added a comment to test the source control *@
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/flashQuizLogo.png" /></a>
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                            @if (Request.IsAuthenticated){
                            <li>@Html.ActionLink("Quiz Management", "Index", "Quiz")</li>
                            }
                            <li>@Html.ActionLink("Browse Quizzes", "Index", "TakeQuiz")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Flash Quiz - created by Ajit Musalgavkar</p>
                </div>
            </div>
        </footer>

        @* Added custom bundle in AppStart/BundleConfig *@
        @Scripts.Render("~/bundles/flashQuizBundle") 
        @RenderSection("scripts", required: false)
    </body>
</html>
