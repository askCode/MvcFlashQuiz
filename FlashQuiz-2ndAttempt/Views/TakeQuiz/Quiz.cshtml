@model IEnumerable<FlashQuiz_2ndAttempt.Models.TakeQuizModel>

@{
    ViewBag.Title = "Quiz";
    var quiz = @Html.Raw(Json.Encode(Model));
}

@*<h2>Quiz: @quiz</h2>*@


<div class="container" id="quizform">
    <!-- Left Panel -->
    <div class="col-md-8">
        <div class="row">
            <div class="jumbotron">
                <h1>Question:</h1>
                <p id="questioncontent"></p>
            </div>
        </div>

        <div class="row">
            <table class="table">
                <tr>
                    <td>A: <span id="A"></span></td>
                </tr>
                <tr>
                    <td>B: <span id="B"></span></td>
                </tr>
                <tr>
                    <td>C: <span id="C"></span></td>
                </tr>
                <tr>
                    <td>D: <span id="D"></span></td>
                </tr>
            </table>
        </div>
    </div>

    <!-- Right Panel -->
    <div class="col-md-offset-1 col-md-3">
        <div class="row">
            <ul class="list-group">
                <li class="list-group-item"><span class="badge pull-right" id="correct"></span>Correct</li>
                <li class="list-group-item"><span class="badge pull-right" id="incorrect"></span>Incorrect</li>
                <li class="list-group-item">
                    <p>Progress</p>
                    <div class="progress progress-striped active">
                        <div class="progress-bar progress-bar-info" id="progressbar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="25" style="width: 0%">
                            <span class="sr-only"><span id="progress"></span>Complete</span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <div class="collapse navbar-collapse" id="hints">
            <div class="row">
                <h2 id="correctalert" style="display: none">
                    <p class="text-success">You're right!</p>
                </h2>
                <h2 id="incorrectalert"></h2>
            </div>
        </div>
    </div>
</div>

<!-- Completion Screen -->
<div class="container result" id="completion" style="display: none;">
    <div class="col-md-offset-3 col-md-6 well">
        <div class="row">
            <div class="completeelement col-md-12" id="completionmessage"></div>
            <h2 class="text-success completeelement col-md-6">Correct: <span id="correctresult"></span></h2>
            <h2 class="text-primary  completeelement col-md-6">Incorrect: <span id="incorrectresult"></span></h2>
        </div>
        <div class="row">
            <div class="col-md-12 completeelement">
                <br />
                <div class="progress progress-striped active">
                    <div class="progress-bar progress-bar-success" id="correctbar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="25" style="width: 0%">
                        <span class="sr-only"><span id="correctpercentage"></span>Correct</span>
                    </div>
                    <div class="progress-bar progress-bar-primary" id="incorrectbar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="25" style="width: 0%">
                        <span class="sr-only"><span id="incorrectpercentage"></span>Incorrect</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h4 class="completeelement" id="retrylink"><a length="1" href="/Quiz/Index/1">Try Again</a></h4>
                <h4 class="completeelement" id="backlink"><a href="/">Back to Main</a></h4>
            </div>
            <div class="col-md-offset-3 col-md-3">
                <h2 class="text-primary" id="finalpercent"></h2>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script type="text/javascript">
        //Function that receives JSON data passed by the controller
        $(function () {
            Quiz(@quiz)
        });
    </script>

}